<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarListingAppDemoMaui.View.CarDetailsPage"
             xmlns:viewModel="clr-namespace:CarListingAppDemoMaui.ViewModel"
             x:DataType="viewModel:CarDetailsViewModel"
             Title="{Binding Car.Make}">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label  Text="Model:"  FontSize="20"/>
            <Label  Text="{Binding Car.Model}"  FontSize="20"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label  Text="Make:"  FontSize="20"/>
            <Label  Text="{Binding Car.Make}"  FontSize="20"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label  Text="Vin:"  FontSize="20"/>
            <Label  Text="{Binding Car.Vin}"  FontSize="20"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>